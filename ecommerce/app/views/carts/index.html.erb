<p id="notice"><%= notice %></p>

<h1>Carts</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th>Unit price</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carts.each do |cart| %>
      <tr>
        
        <td><%= cart.cart_product %></td>
        <td><%= cart.quantity %></td>
        <td><%= cart.unit_price %></td>
        <td><%= cart.total %></td>
        <td><%= link_to 'Decrease', edit_cart_path(cart) %></td>
        <td><%= link_to 'Destroy', cart, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Increase', new_cart_path(:product_id => cart.product.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<span>total cost is  </span>
<h3><%= @total %></h3>
