<p id="notice"><%= notice %></p>

<h1>Products</h1>
<%= form_tag products_path ,:method => 'get' do%>
    <%= collection_select :product, :category_id, @category, :id,:name, prompt: true %>
    <%= submit_tag "select category" %>
<% end %> 
<%= form_tag products_path ,:method => 'get' do%>

<%= collection_select :product, :brand_id, @brand, :id,:name, prompt: true %>
<%= submit_tag "select brand" %>
<% end %> 

<p>search with title or description:<p>
<%= form_for "",url: products_path ,role:"search", method: :get do%>
 <%= text_field_tag :search ,@search_term, placeholder: "search..." %>
 <% end %> 

 
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Image</th>
      <th>Price</th>
      <th>Quantity in stock</th>
      <th>Description</th>
      <th>Category</th>
      <th>Brand</th>
      <th>Store</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% if (@products) %>
    <% if (@products.empty?) %>
      <p>No product found.</p>
  <% else %>
    
  
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <%# <td><%= product.image</td>  %>
        <td>
          <% if product.image.attached? %>
            <%= image_tag product.image %>
          <% end %>
        </td>
        <td><%= product.price %></td>
        <td><%= product.quantity_in_stock %></td>
        <td><%= product.description %></td>
        <td><%= product.product_category %></td>
        <td><%= product.product_brand %></td>
        <td><%= product.product_store %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
<% end %>
<% else %>
 <p>Use the search form to search for product.</p>
<% end %>
