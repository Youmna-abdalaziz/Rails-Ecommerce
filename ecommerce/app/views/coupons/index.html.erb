<p id="notice"><%= notice %></p>

<h1>Coupons</h1>

<table>
  <thead>
    <tr>
      <th>Expiring Date</th>
      <th>Discount Value</th>
      <th>Discount Type</th>
      <th>Usage Num</th>
      <th>Expiring Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coupons.each do |coupon| %>
      <tr>
        <td><%= coupon.expiring_date %></td>
        <td><%= coupon.discount_value %></td>
        <td><%= coupon.discount_Type %></td>
        <td><%= coupon.usage_num %></td>
        <td><%= coupon.expiring_type %></td>
        <td><%= link_to 'Show', coupon %></td>
        <td><%= link_to 'Edit', edit_coupon_path(coupon) %></td>
        <td><%= link_to 'Destroy', coupon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

